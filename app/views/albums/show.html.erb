<div id="section-title">
	<h1><%= @album.title %></h1>
</div>


<% if admin_user_signed_in? %>
  <%= link_to "Modifier", edit_album_path(@album) %> - <%= link_to 'Supprimer', @album, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
</br>

<div id="album-show-description">
	<%= @album.description %>
</div>

<div id="album-photos">

<% @album.photos.all.each do |photo| %>
	<div class="photo">
		<%= link_to image_tag(photo.file_url(:albumview).to_s), photo.file_url().to_s, :rel => "lightbox"%>
	</div>
	
<% end %>

</div>
<div class="comments">
	<div class="fb-comments" data-href="http://hedyaounallah-thion.com/<%= album_path(@album) %>" data-colorscheme="The color scheme used in the plugin" data-numposts="5" data-width="900"></div>
</div>

