<%= form_for(Gallery.new) do |f| %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :picture %><br />
    <%= f.file_field :picture %>
  </div>

    <%= f.hidden_field :user_id, value: current_user.id %>
    
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
