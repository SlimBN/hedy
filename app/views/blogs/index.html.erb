
   <!--start content-->
    <div id="content-wrapper">
    
        <section class="pages clearfix">        
        
            <!--start section title-->
            <div id="section-title">
                <h1>Les cogitations d'un</h1>
                <h1>voyageur...</h1>
            </div>

            
            <!--start content left-->
            <div class="content-inner-left">



<% Blog.order('created_at DESC').each do |blog| %>


                    <article class="blog-post" id="entry-<%= blog.id %>">
                        <div class="blog-post-content">
                            <div class="blog-post-featured-media">
                                 <div class="thumb">
                                        <%= image_tag blog.cover_url(:blog).to_s, style: "width: 605px; height: auto;" %>
                                </div>
                                <div class="blog-post-meta-date">
                                    <% month_num = blog.created_at.month %>
                                    <% if month_num = "1" %>
                                        <% chhar = "Jan" %>
                                    <% end %>
                                    <% if month_num = "2" %>
                                        <% chhar = "Fev" %>
                                    <% end %>
                                    <% if month_num = "3" %>
                                        <% chhar = "Mar" %>
                                    <% end %>
                                    <% if month_num = "4" %>
                                        <% chhar = "Avr" %>
                                    <% end %>
                                    <% if month_num = "5" %>
                                        <% chhar = "Mai" %>
                                    <% end %>
                                    <% if month_num = "6" %>
                                        <% chhar = "Jun" %>
                                    <% end %>
                                    <% if month_num = "7" %>
                                        <% chhar = "Jui" %>
                                    <% end %>
                                    <% if month_num = "8" %>
                                        <% chhar = "Aou" %>
                                    <% end %>
                                    <% if month_num = "9" %>
                                        <% chhar = "Sep" %>
                                    <% end %>
                                    <% if month_num = "10" %>
                                        <% chhar = "Oct" %>
                                    <% end %>
                                    <% if month_num = "11" %>
                                        <% chhar = "Nov" %>
                                    <% end %>
                                    <% if month_num = "12" %>
                                        <% chhar = "Dec" %>
                                    <% end %>
                                    <span class="month"><%= chhar %></span>
                                    <span class="day"><%= blog.created_at.day %></span>
                                    <span class="year"><%= blog.created_at.year %></span>
                                </div>
                            </div>
                            <h2 class="blog-post-title"><%= blog.title %></h2>
                            <div class="blog-post-meta">
                                <%= blog.created_at %> | Rédigé par: <a href="#">Hedy Aounallah Thion</a>
                            </div>
                            <p>
                            <%= blog.content %>
                            </p>

                            
                        </div>
                    </article>


