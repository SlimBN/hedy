                <!--start post nav-->

                 
                </div>


                        <!--start sidebar-->
                <aside class="sidebar left">
                    <ul>
                        <!--widget-recent-posts-->
                        <li class="widget_recent_entries">
                            <h6 class="widgettitle">Derniers Articles</h6>
                            <ul>
                                <% Blog.order('created_at DESC').last(20).each do |blog| %>
                                <li>
                                <%= link_to blog.title, "#entry-"+blog.id.to_s %>
                                <p class="date"><%= blog.created_at.day %>/<%= blog.created_at.month %>/<%= blog.created_at.year %></p>
                                </li>
                                <% end %>
                            </ul>
                        </li>

                        <!--widget-recent-posts-->
                        <li class="widget_recent_entries">
                            <h6 class="widgettitle">Dernieres Videos</h6>
                            <ul>
                                <% Videography.order('created_at DESC').last(20).each do |video| %>
                                <li>
                                <%= link_to video.title, video %>
                                <p class="date"><%= video.created_at.day %>/<%= video.created_at.month %>/<%= video.created_at.year %></p>
                                </li>
                                <% end %>
                            </ul>
                        </li>




                    
                    </ul>
                </aside>      


    
    </div>

